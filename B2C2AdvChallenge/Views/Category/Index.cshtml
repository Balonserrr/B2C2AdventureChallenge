@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Overzicht van alle gemaakte challenges</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary mx-2">
                <i class="bi bi-plus-circle"></i> &nbsp; Maak een nieuwe challenge.
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">
                <i class="bi bi-door-open"></i> &nbsp; Terug naar het hoofdmenu.
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Challenge naam
            </th>
            <th>
                Beschrijving
            </th>
            <th>
                Volgnummer
            </th>
            <th>
                Tijdstip challenge
            </th>
            <th>
                Aanmaakdatum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.Description
                </td>
                <td width="7%">
                    @obj.DisplayOrder
                </td>
                <td width="15%">
                    @obj.ChallengeTime
                </td>
                <td width="10%">
                    @obj.CreatedDateTime
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> &nbsp; Wijzigen</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash3"></i> &nbsp; Verwijderen</a>
                            <a class="btn btn-success mx-2" asp-controller="Category" asp-action="Finish" asp-route-id="@obj.Id">
                            <i class="bi bi-list-check"></i> &nbsp; Rond een challenge af.</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>